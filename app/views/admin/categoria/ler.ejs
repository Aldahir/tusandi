<%- include('../includes/header') %>
<%- include('../includes/sidebar') %>
    <div class="main-content">
        <%- include('../includes/navbar') %>
        <div class="header bg-gradient-primary pb-8 pt-5 pt-md-8">
            <div id="content" class="container">
                <div class="row">

                    <div class="col-12">
                        <nav aria-label="breadcrumbs">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/admin">Início</a></li>
                                <li class="breadcrumb-item"><a href="/admin/categoria">Categoria</a></li>
                                <li class="breadcrumb-item active" aria-current="page"> Ver detalhes de <%= categoria.nome %></li>
                            </ol>
                        </nav>
                    </div>

                    <div class="col-12">
                        <div class="title">
                            <h1 class="h1 fw-bolder">Ver detalhes de <%= categoria.nome %></h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="container">
            <div class="row mt-5 bg-white p-4 rounded">
                <div class="col-xl-4">
                    <div class="img-preview rounded">
                        <img src="<%= categoria.imgPath %>" alt="<%= categoria.nome %>" class="img-fluid img-recept rounded">
                    </div>
                </div>
                <div class="col-xl-8">
                    <div class="row">
                        <div class="col-xl-12 mt-3">
                            <h4>Nome da categoria:</h4>
                            <%= categoria.nome %>
                        </div>
                        <div class="col-lg-6 mt-3">
                            <h4>Tipo:</h4>
                            <%= categoria.tipo ==1 ? "Produto" : "Serviço" %>
                        </div>
                        <div class="col-lg-6 mt-3">
                            <h4>Activado:</h4>
                            <%= categoria.estado == 1 ? "Sim" : "Não" %>
                        </div>
                        <div class="col-lg-12 mt-3">
                            <h4>Descrição:</h4>
                            <%= categoria.descricao %>
                        </div>
                        <div class="col-lg-12 col-xl-12 d-flex gap-3 align-items-center justify-content-center mt-3">
                            <a class="link me-2" href="/admin/categoria/">Voltar</a>
                            <a class="btn btn-primary" href="/admin/categoria/editar/<%= categoria.id %>">Editar</a>
                            <a class="btn btn-danger" href="javascript:apagarCategoria(<%= categoria.id %>, '<%= categoria.nome %>')">Apagar</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<%- include('../includes/footer') %>