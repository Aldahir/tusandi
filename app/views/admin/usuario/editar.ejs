<%- include('../includes/header') %>
<%- include('../includes/sidebar') %>
<div class="main-content">
<%- include('../includes/navbar') %>
    <div class="header bg-gradient-primary pb-8 pt-5 pt-md-8">
        <div id="content" class="container">
            <div class="row">
                <div class="col-12">
                    <nav aria-label="breadcrumbs">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/admin"> Início </a></li>
                            <li class="breadcrumb-item"><a href="/admin/parceiros"> Usuário </a></li>
                            <li class="breadcrumb-item active" aria-current="page"> Editar usuário <%= usr.nome %>
                            </li>
                        </ol>
                    </nav>
                </div>

                <div class="col-12">
                    <div class="mt-3">
                        <h1 class="h1 fw-bolder">Editar usuário <%= usr.nome %>
                        </h1>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <form action="/admin/api/v1.0.1/usuario/editar/<%= usr.id %>" class="container"
        enctype="multipart/form-data" method="post" class="">
        <div class="row p-5 bg-white rounded">

            <div class="col-lg-12 col-sm-12">
                <div class="row mt-3">
                    <!-- <h2 class="col-12 d-block mb-3 p-0">Dados do utilizador</h2> -->
                    <div class="col-lg-4">
                        <label class="form-label" for="nome">Nome completo</label>
                        <input type="text" autocomplete="name" class="form-control mt-2" name="nome" id="nome" required
                            aria-describedby="nome" value="<%= usr.nome %>">
                    </div>
            
                    <div class="col-lg-4">
                        <label class="form-label" for="nome">Sobrenome</label>
                        <input type="text" required autocomplete="Sobrenome" class="form-control mt-2" name="sobrenome"
                            id="sobrenome" aria-describedby="Sobrenome" value="<%= usr.sobrenome %>">
                    </div>
            
                    <div class="col-lg-4">
                        <label class="form-label" for="username">Nome de utilizador</label>
                        <input type="text" autocomplete="username" class="form-control mt-2" required name="username" id="username"
                            aria-describedby="username" value="<%= usr.username %>" disabled>
                    </div>
                </div>
            
                <div class="align-items-lg-baseline justify-content-center mt-3 row">
                    <div class="col-lg-4">
                        <label class="form-label" for="telefone">Telefone</label>
                        <input type="phone" autocomplete="tel-country-code" class="form-control mt-2" required name="telefone"
                            id="telefone" aria-describedby="telefone" value="<%= usr.telefone %>">
                    </div>
            
                    <div class="col-lg-4">
                        <label class="form-label" for="email">E-mail</label>
                        <input type="email" autocomplete="email" class="form-control mt-2" required name="email" id="email" value="<%= usr.email %>"
                            aria-describedby="email">
                    </div>
                    <div class="col-lg-4">
                        <label class="form-label" for="aniversario">Aniversário</label>
                        <input type="date" class="form-control mt-2" name="aniversario" id="aniversario" value="<%= usr.aniversario %>">
                    </div>
            
                </div>
            
                <div class="row mt-3 align-items-center">
                    <div class="col-lg-4 d-flex flex-column gap-lg-3">
                        <span>Género</span>
                        <div class="d-flex gap-lg-2 align-items-lg-center">
                            <% if (usr.genero == 'M') { %>
                            <input type="radio" id="sexo-m" value="masculino" name="sexo" class="form-check" checked> <label
                                class="form-label mt-2" checked="" for="sexo-m">Masculino</label>
                            <input type="radio" id="sexo" value="feminino" name="sexo" class="form-check"> <label
                                class="form-label mt-2" for="sexo">Feminino</label>
                            <% } else { %>
                            <input type="radio" id="sexo-m" value="masculino" name="sexo" class="form-check" checked> <label
                                class="form-label mt-2" for="sexo-m">Masculino</label>
                            <input type="radio" id="sexo" checked="" value="feminino" name="sexo" class="form-check"> <label
                                class="form-label mt-2" for="sexo">Feminino</label>
                            <% } %>
                        </div>
                    </div>
            
                    <div class="col-lg-4">
                        <label class="form-label" for="provincia">Província</label>
                        <select name="provincia" class="form-select mt-2" id="provincia">
                            <option value="null">Escolha a sua província</option>
                        </select>
                    </div>
            
                    <div class="col-lg-4">
                        <label class="form-label" for="municipio">Município</label>
                        <select name="municipio" class="form-select mt-2" id="municipio">
                            <option value="null">Escolha o seu município</option>
                        </select>
                    </div>
                </div>
            
                <div class="row mt-3">
                    <div class="col-lg-4">
                        <img src="<%= usr.img %>" class="img-fluid img-recept" alt="<%= usr.nome %>">
                        <input type="file" name="imgPath" class="form-control mt-3">
                        <input type="hidden" name="fileName" value="<%= usr.img %>" class="form-control mt-3">
                    </div>
                    <div class="col-lg-8">
                        <div class="row my-3 align-items-center">
                            <div class="col-lg-6">
                                <label class="form-label" for="senha">Senha</label>
                                <input type="password" placeholder="********" maxlength="8" required class="form-control mt-2" name="senha" id="senha">
                            </div>
                    
                            <div class="col-lg-6 mt-3">
                                <label class="form-label" for="csenha">Confirmar senha</label>
                                <input type="password" placeholder="********" maxlength="8" required class="form-control mt-2" name="csenha" id="csenha">
                            </div>

                            <div class="col-lg-6 mt-3">
                                <label class="form-label" for="tipo">Função</label>
                                <select name="tipo" id="tipo" class="form-select mt-2">
                                    <option value="null">Escolha a função</option>
                                </select>
                            </div>
                            
                            <div class="col-lg-6 mt-3">
                                <label class="form-label" for="estado">Estado</label>
                                <select name="estado" id="estado" class="form-select mt-2">
                                    <option value="null">Escolha a função</option>
                                    <% if(usr.estado == 1) { %>
                                        <option value="1" selected>Activado</option>
                                        <option value="0">Desactivado</option>
                                    <% } else { %>
                                        <option value="1">Activado</option>
                                        <option value="0" selected>Desactivado</option>
                                    <% } %>
                                </select>
                            </div>
                        </div>
            
                        <label class="endereco" for="endereco">Endereço</label>
                        <textarea name="endereco" id="endereco" cols="30" rows="3" style="resize: none"
                            class="form-control mt-2"><%= usr.endereco %></textarea>
                    </div>
                </div>
            </div>

            <div class="mt-4 col-lg-12 d-flex justify-content-around gap-3">
                <div class="flex-grow-0 border-0" style="text-align: center;">
                    <button type="button" onclick="history.back()" class="btn btn-primary">Voltar</button>
                </div>

                <div class="flex-grow-0 border-0" style="text-align: center;">
                    <button type="submit" class="btn btn-success">Salvar</button>
                </div>

                <div class="flex-grow-0 border-0" style="text-align: center;">
                    <button type="reset" class="btn btn-danger">Limpar</button>
                </div>
            </div>
        </div>
    </form>
</div>

<script>
    fetch('/api/controller/usuario/tipo').then(r=>r.json()).then(i=>{
        i.forEach(e=>{
            document.querySelector('#tipo').innerHTML += `<option value="${e.tipo}">${e.descricao.substring(0, 1).toUpperCase() + e.descricao.substring(1, e.descricao.length)}</option>`
        })
    }).catch(err=>console.log(err));
    document.addEventListener("readystatechange", (e) => {
        if (e.target.readyState === "complete") {
            getProvincia()
        }
    })
</script>
<%- include('../includes/footer') %>