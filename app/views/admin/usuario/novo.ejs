<%- include('../includes/header') %>
<%- include('../includes/sidebar') %>
<div class="main-content">
<%- include('../includes/navbar') %>
    <div class="header bg-gradient-primary pb-8 pt-5 pt-md-8">
        <div id="content" class="container">
            <div class="row">
                <div class="col-12">
                    <nav aria-label="breadcrumbs">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/admin"> Início </a></li>
                            <li class="breadcrumb-item"><a href="/admin/parceiros"> Usuário </a></li>
                            <li class="breadcrumb-item active" aria-current="page"> Novo usuário </li>
                        </ol>
                    </nav>
                </div>

                <div class="col-12">
                    <div class="mt-3">
                        <h1 class="h1 fw-bolder">Novo usuário</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <form action="/admin/api/v1.0.1/usuario/novo" class="container"
        enctype="multipart/form-data" method="post" class="row">

        <div class="col-lg-12 col-sm-12">
            <div class="row mt-3">
                <div class="col-lg-4">
                    <label class="form-label" for="nome">Nome completo</label>
                    <input type="text" autocomplete="name" class="form-control mt-2" name="nome" id="nome" required
                        aria-describedby="nome">
                </div>
        
                <div class="col-lg-4">
                    <label class="form-label" for="nome">Sobrenome</label>
                    <input type="text" required autocomplete="Sobrenome" class="form-control mt-2" name="sobrenome"
                        id="sobrenome" aria-describedby="Sobrenome">
                </div>
        
                <div class="col-lg-4">
                    <label class="form-label" for="username">Nome de utilizador</label>
                    <input type="text" autocomplete="username" class="form-control mt-2" required name="username" id="username"
                        aria-describedby="username">
                </div>
            </div>
        
            <div class="align-items-lg-baseline justify-content-center mt-3 row">
                <div class="col-lg-4">
                    <label class="form-label" for="telefone">Telefone</label>
                    <input type="phone" autocomplete="tel-country-code" class="form-control mt-2" required name="telefone"
                        id="telefone" aria-describedby="telefone">
                </div>
        
                <div class="col-lg-4">
                    <label class="form-label" for="email">E-mail</label>
                    <input type="email" autocomplete="email" class="form-control mt-2" required name="email" id="email"
                        aria-describedby="email">
                </div>
        
                <div class="col-lg-4 d-flex flex-column gap-lg-3">
                    <span>Género</span>
                    <div class="d-flex gap-lg-2 align-items-lg-center">
                        <input type="radio" id="sexo-m" value="masculino" name="sexo" class="form-check" checked> <label
                            class="form-label mt-2" for="sexo-m">Masculino</label>
                        <input type="radio" id="sexo" value="feminino" name="sexo" class="form-check"> <label
                            class="form-label mt-2" for="sexo">Feminino</label>
                    </div>
                </div>
            </div>
        
            <div class="row mt-3 align-items-center">
                <div class="col-lg-3">
                    <div class="d-flex gap-lg-3">
                        <div class="col-lg-4">
                            <label class="form-label" for="dia">Dia</label>
                            <select name="dia" class="form-select mt-2" id="dia">
                                <% for (let i=1; i <=31; i++){%>
                                    <option value="<%= i %>">
                                        <%= i %>
                                    </option>
                                    <% } %>
                            </select>
                        </div>
        
                        <div class="col-lg-4">
                            <label class="form-label" for="mes">Mês</label>
                            <select name="mes" class="form-select mt-2" id="mes">
                                <option value="1">Janeiro</option>
                                <option value="2">Fevereiro</option>
                                <option value="3">Março</option>
                                <option value="4">Abril</option>
                                <option value="5">Maio</option>
                                <option value="6">Junho</option>
                                <option value="7">Julho</option>
                                <option value="8">Agosto</option>
                                <option value="9">Setembro</option>
                                <option value="10">Outubro</option>
                                <option value="11">Novembro</option>
                                <option value="12">Dezembro</option>
                            </select>
                        </div>
        
                        <div class="col-lg-4">
                            <label class="form-label" for="ano">Ano</label>
                            <select name="ano" class="form-select mt-2" id="ano">
                                <% let data=new Date(); for(let i=1965; i <=data.getFullYear(); i++){%>
                                    <option value="<%= i %>">
                                        <%= i %>
                                    </option>
                                    <% } %>
                            </select>
                        </div>
                    </div>
                </div>
        
                <div class="col-lg-3">
                    <label class="form-label" for="provincia">Província</label>
                    <select name="provincia" class="form-select mt-2" id="provincia">
                        <option value="null">Escolha a sua província</option>
                    </select>
                </div>
        
                <div class="col-lg-3">
                    <label class="form-label" for="municipio">Município</label>
                    <select name="municipio" class="form-select mt-2" id="municipio">
                        <option value="null">Escolha o seu município</option>
                    </select>
                </div>
        
                <div class="col-lg-3">
                    <label class="form-label" for="tipo">Função</label>
                    <select name="tipo" id="" class="form-select mt-2"><option value="null">Escolha a função</option></select>
                </div>
            </div>
        
            <div class="row mt-3 align-items-center">
                <div class="col-lg-6">
                    <label class="form-label" for="senha">Senha</label>
                    <input type="password" required class="form-control mt-2" name="senha" id="senha">
                </div>
        
                <div class="col-lg-6">
                    <label class="form-label" for="csenha">Confirmar senha</label>
                    <input type="password" required class="form-control mt-2" name="csenha" id="csenha">
                </div>
            </div>
        
            <div class="row mt-3">
                <div class="col-lg-12">
                    <label class="endereco" for="endereco">Endereço</label>
                    <textarea name="endereco" id="endereco" cols="30" rows="3" style="resize: none"
                        class="form-control mt-2"></textarea>
                </div>
            </div>
        
            <div class="row mt-3">
                <div class="col-lg-12 d-flex align-items-center justify-content-center gap-lg-3">
                    <button onclick="history.back()" class="bg-dark-blue btn px-4 text-white">Voltar</button>
                    <button onclick="novoUsuario()" class="save bg-orange btn px-4 text-white btn-danger">Criar conta</button>
                </div>
                <input type="hidden" name="paisID" value="1">
                <input type="hidden" name="estado" value="1">
            </div>
        </div>

        <div class="mt-4 col-lg-12 d-flex justify-content-around gap-3">
            <div class="flex-grow-0 border-0" style="text-align: center;">
                <button type="button" onclick="history.back()" class="btn btn-primary">Voltar</button>
            </div>

            <div class="flex-grow-0 border-0" style="text-align: center;">
                <button type="submit" class="btn btn-success">Salvar</button>
            </div>

            <div class="flex-grow-0 border-0" style="text-align: center;">
                <button type="reset" class="btn btn-danger">Limpar</button>
            </div>
        </div>
    </form>
</div>

<script>
    fetch('/api/controller/usuario/tipo').then(r => r.json()).then(i => {
        i.forEach(e => {
            document.querySelector('[name=tipo]').innerHTML += `<option value="${e.tipo}">${e.descricao.substring(0, 1).toUpperCase() + e.descricao.substring(1, e.descricao.length)}</option>`
        })
    }).catch(err => console.log(err));
    document.addEventListener("readystatechange", (e) => {
            if (e.target.readyState === "complete") {
                getProvincia()
            }
        })
</script>

<%- include('../includes/footer') %>