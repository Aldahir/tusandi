<%- include('../includes/header') %>
<%- include('../includes/sidebar') %>

<div class="main-content">
    <%- include('../includes/navbar') %>
    <div class="header bg-gradient-primary pb-8 pt-5 pt-md-8">
        <div id="content" class="container">
            <div class="row">
                <div class="col-12">
                    <nav aria-label="breadcrumbs">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/admin">Início</a></li>
                            <li class="breadcrumb-item"><a href="/admin/empresa">Empresa</a></li>
                            <li class="breadcrumb-item active" aria-current="page"> Ver detalhes de <%= data.title.toLowerCase() %></li>
                        </ol>
                    </nav>
                </div>
                
                <div class="col-12 mt-5">
                    <div class="title">
                        <h1 class="h1 fw-bolder">Ver detalhes de <%= data.title.toLowerCase() %></h1>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class=" bg-white rounded p-5 mt-5">
            <div class="col-xs-12 col-lg-12">
                <div class="row"> 
                    <table class="table table-responsive">
                        <tr>
                            <td width="60%" colspan="2" class="border-0"><h1><%= data.title %></h1></td>
                            <td class="d-flex gap-4 border-0">
                                <div class="d-flex flex-column">
                                    <label for="dataCreated">Criado aos:</label>
                                    <span><%= data.dataCreated %></span>
                                </div>
                                <div class="d-flex flex-column">
                                    <label for="dataUpdated">Actualizado:</label>
                                    <span><%= data.dataCreated %> por <%= user.nome %></span>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="3" class="text-form text-wrap fs-6">
                                <div class="my-4"><%= data.valor %></div>
                            </td>
                        </tr>
                        <tr>
                            <td class=" border-0">
                                <label class="d-block" for="estado">Estado</label>
                                <% let classe; 
                                if (data.estado == 0) { 
                                    classe = {class:'bg-danger', text:"Offline"}
                                } else if (data.estado == 1) {
                                    classe = {class:'bg-success', text:"Online"}
                                } else {
                                    classe = {class:'bg-secondary', text:"Desactivado"}
                                } %>
                                <div class="badge <%= classe.class %> p-2 px-4"><%= classe.text %></div>
                            </td>
                            <td class=" border-0">
                                <label class="d-block" for="html_support">Suporte HTML</label>
                                <div><%= "Não" %></div>
                            </td>
                            <td class=" border-0">
                                <label class="d-block" for="site_anchor">Vinculado ao site</label>
                                <div class="mb-3"><%= "Tusandi.com" %></div>
                            </td>
                        </tr>
                        <tr>
                            <td class=" border-0" style="text-align: center;">
                                <button type="button" onclick="history.back()" class="btn btn-primary">Voltar</button>
                            </td>

                            <td colspan="2" class=" border-0" style="text-align: center;">
                                <a href="/admin/empresa/dados/editar/<%= data.id %>" class="btn btn-success px-5">Editar</a>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../includes/footer') %>