<%- include('../includes/header.ejs') %>

    <main class="py-5 mb-5">
        <div class="container">
            <div class="row align-content-center justify-content-center">
                <div class="col-12 mb-4">
                    <nav aria-label="breadcrumbs">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item small"><a href="/"><i class="small far fa-home"></i></a></li>
                            <li class="breadcrumb-item small"><a href="/usuario">Usuário</a></li>
                            <li class="breadcrumb-item small active" aria-current="page"> Recuperar conta </li>
                        </ol>
                    </nav>
                </div>

                <div class="col-4 ">
                    <div class="card rounded-0 border-0 shadow-sm">
                        <div class="card-header text-center border-0">
                            <h3 class="m-2 fs-4 fw-bolder">Esqueceu sua palavra-passe</h3>
                        </div>
                        <form id="rec-frm" action="" method="post">

                            <div class="card-body text-center">
                                <div class="p-4 d-slide">
                                    <div class="fields-content mb-4">
                                        <span class="fs-6">Enviaremos um link de recuperação para </span>
                                        <input type="email" required placeholder="Escrever o e-mail"
                                            class="form-control mt-3" name="_mail" id="mail">
                                    </div>

                                    <div class="d-flex fields-content align-items-center flex-column gap-4">
                                        <button id="recover" onclick="confirmRecoverAccount()" class="btn bg-orange text-white w-100 fw-medium" type="submit">Enviar link de recuperação</button>
                                    </div>
                                </div>
                                <a href="/usuario/entrar" class="link-offset-1 pb-4 d-block">Voltar ao início</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script>
        document.getElementById('rec-frm').addEventListener("submit", (e)=>{
            e.preventDefault();
            return false;
        })
    </script>

