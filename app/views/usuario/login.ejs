<%- include('../includes/header.ejs') -%>

    <main class="py-5">
        <div class="container">
            <div class="row align-content-center justify-content-center">
                <div class="col-lg-4 col-sm-12 col-md-6 my-lg-5">
                    <div class="card shadow-sm rounded-0 border-0">
                        <div class="card-header text-center border-0">
                            <h3 class="m-2 fs-4 fw-bolder">Entrar</h3>
                        </div>
    
                        <div class="card-body p-4">
    
                            <div class="first fields-content">
                                <b class="fs-6 fw-semibold">Utilizador</b>
                                <input type="text" class="form-control mt-3" name="usr" id="_usr">
                            </div>
    
                            <div class="fields-content mt-2">
                                <b class="fs-6 fw-semibold">Palavra-passe:</b>
                                <input type="password" class="form-control mt-3" name="pwd" id="_pwd">
                            </div>
    
                            <div class="fields-content mb-3 mt-2 small text-end">
                                <a href="/usuario/esqueci-senha" class="link-offset-1 small">Esqueceu sua palavra-passe?</a>
                            </div>
    
                            <div class="d-flex fields-content flex-column gap-3">
                                <button class="btn bg-orange text-white w-100 fw-medium" id="sbt" type="submit">Entrar</button>
                                <a href="/usuario/criar-conta" class="border-1 border-dark border-opacity-25 btn btn-light">Novo registo</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

<script>
    document.getElementById('sbt').addEventListener("click", ()=>{
        userLogin();
    })
</script>

